{
  "extends": "./tsconfig-paths.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "outDir": "dist",
  },
  "exclude": ["node_modules", "dist"]
}
